syntax on
set nocompatible
set autoindent
set smartindent
set noexpandtab
set tabstop=4
set shiftwidth=4
set showmatch
set virtualedit=all
set backspace=indent,eol,start
set hlsearch " highlight search
set incsearch " search as you type
set ignorecase " ignore case when searching

set nowrap
set linebreak	" Wrap at word

colorscheme delek-mod
